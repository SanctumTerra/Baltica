{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"*": ["./*"]
		},
		"outDir": "dist"
	},
	"exclude": ["node_modules", "dist", "tokens"]
}
